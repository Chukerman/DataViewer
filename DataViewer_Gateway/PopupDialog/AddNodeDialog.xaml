<Window x:Class="DataViewer_Gateway.PopupDialog.AddNodeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="添加采集节点" Height="300" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel>
            <Label Content="节点硬件编号"></Label>
            <TextBox Name="HardwareID_TextBox" Height="30" VerticalContentAlignment="Center" LostFocus="On_HardwareIDTextBox_LostFocus" TextChanged="On_HardwareIDTextBox_TextChanged"></TextBox>
            <Label Content="节点描述信息"></Label>
            <TextBox Name="Description_TextBox" Height="140" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"></TextBox>
            <StackPanel Orientation="Horizontal" Height="30" HorizontalAlignment="Center" Margin="0,5,0,0">
                <Button Name="Confirm_Button" Width="80" Content="确定" Margin="0,0,5,0" Click="On_ConfirmButton_Click"/>
                <Button Name="Cancel_Button" Width="80" Content="取消" Margin="5,0,0,0" Click="On_CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
